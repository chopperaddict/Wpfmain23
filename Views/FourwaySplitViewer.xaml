                                            Content="Show Load  times"
                                            FontSize="14"
                                            Foreground="White"
                                            HorizontalAlignment="Left"
                                            Margin="20,111,0,0"
                                            VerticalAlignment="Top"
                                            Width="176" Height="18" />
                    <CheckBox x:Name="LoadViaSqlCmd"
                                            AllowDrop="True"
                                            Grid.Row="1"
                                            Panel.ZIndex="1"
