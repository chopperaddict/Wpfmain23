						                    Click="scrollview_Click"
						                    Content="Use ScrollViewer in FlowDoc"
						                    FontSize="14"
						                    Foreground="White"
						                    HorizontalAlignment="Left"
						                    VerticalAlignment="Top"
						                    Margin="51,49,0,0"
						                    Width="208" Height="20" />
                    <CheckBox x:Name="UseTimer"
                                            Panel.ZIndex="1"
