                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="20,225,0,0"
                                    IsChecked="true"
                                    Width="276" Height="18"  />
                    <!--#endregion checkboxes-->

                </Grid
                            >
            </GroupBox >

