                                            FontSize="14"
                                            Foreground="White"
                                            HorizontalAlignment="Left"
                                            Margin="30,185,0,0"
                                            VerticalAlignment="Top"
                                            Width="208" Height="18"
                                            Visibility="Hidden"/>
                    <CheckBox x:Name="BgWorker"
                                            AllowDrop="True"
