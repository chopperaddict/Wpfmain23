                    Width="320"
                    Visibility="Visible">
                <d:ListBoxItem>gfhgghd</d:ListBoxItem>
                <d:ListBoxItem>rtyryu</d:ListBoxItem>
                <d:ListBoxItem>n,bmyu658</d:ListBoxItem>
            </ListBox>
                       <!--Style="{StaticResource --><!--ListBoxMagnifyAnimation--><!--4}"-->

            <Button Margin="10,270,0,0" 
                    Content="Reload"
                    FontSize="20"
                    Foreground="White"
                    Width="150" Height="40"
