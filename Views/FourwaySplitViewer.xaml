					    			Height="20" Width="20" />
                                <TextBlock x:Name="LsVerticalright"  Text=" to view other options..." 
                                           Height="20" 
                                           Padding="3 0 0 0" 
                                           Foreground="Black"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right" 
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>

