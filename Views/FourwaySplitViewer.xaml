						                    Height="18"
						                    HorizontalAlignment="Left"
						                    IsChecked="False"
						                    Margin="51,80,0,0"
						                    Panel.ZIndex="2"
						                    VerticalAlignment="Top"
						                    Width="216" />
                    <CheckBox x:Name="UseScrollview"
						                    Panel.ZIndex="1"
